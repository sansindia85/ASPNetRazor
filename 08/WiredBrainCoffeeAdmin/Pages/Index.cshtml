@page
@model IndexModel
@{
    //Layout = "Shared/_LayoutFluid.cshtml";
    ViewData["Title"] = "Home page";
}

<div class="container-fluid dashboard">
    <h1 class="h2">Welcome to Wired Brain Coffee!</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h2>Lastest Products</h2>
            <vc:product-list count="4"/>
            <h2>Latest Survey Results</h2>
            <table class="table table-striped table-bordered">
                @foreach (var item in Model.SurveyResults)
                {
                    <tr>
                        <td>@item.Question</td>
                        <td>@item.Answer</td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    The Basics
                </div>
                <div class="card-body">
                    <p>Hello, today is @DateTime.Today.Date.ToString("MM/dd/yyy").</p>
                    @{
                        var temperature = 55;
                    }
                    <p>The current temperature is @temperature degrees.</p>
                    @if (temperature < 60)
                    {
                        <p>We recommend a coat until it warms up
                            @(60 - temperature) degrees.
                        </p>
                    }
                </div>
            </div>
            <partial name="HelpWidget" />
        </div>
    </div>
</div>